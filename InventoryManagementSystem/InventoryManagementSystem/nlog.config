<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  
	  autoReload="true"
	  throwConfigExceptions="true"
	        internalLogLevel="info"
      >
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<!-- Log to text file -->
		 

		<target xsi:type="File" name="allfile" fileName="C:\Users\Prabhamani M V\source\repos\InventoryManagementSystem\InventoryManagementSystem\Logs\logfile-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />


		<target xsi:type="File" name="ownFile-web" fileName="C:\Users\Prabhamani M V\source\repos\InventoryManagementSystem\InventoryManagementSystem\Logs\logfile-${shortdate}.log">
			<layout xsi:type="JsonLayout" includeEventProperties="true">
				<attribute name="time" layout="${longdate}"/>
				<attribute name="event" layout="${event-properties:item=EventId:whenEmpty=0}"/>
				<attribute name="level" layout="${level:upperCase=true}"/>
				<attribute name="exception" layout="${exception}"/>
				<attribute name="message" layout="${message}"/>
				<attribute name="exception" layout="${exception:format=tostring}"/>
				<attribute name="url" layout="${aspnet-request-url}"/>
				<attribute name="action" layout="${aspnet-mvc-action}"/>
			</layout>
		</target>		
	</targets>
	<!-- rules to map from logger name to target -->
	<rules>
		<!-- Suppress noisy framework logs -->
		<logger name="Microsoft.*" minlevel="Error" writeTo="ownFile-web" final="true" />
		<logger name="System.*" minlevel="Error" writeTo="ownFile-web" final="true" />

		<!-- Application logs - to file and DB -->
		<logger name="InventoryManagementSystem.*" minlevel="Info" writeTo="allfile" />

		<!-- Web-specific logging -->
		<logger name="InventoryManagementSystem.Web.*" minlevel="Info" writeTo="ownFile-web" />

		<!-- Lifetime logs - helpful for app lifecycle monitoring -->
		<logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="ownFile-web" final="true"/>
	</rules>

	
</nlog>
